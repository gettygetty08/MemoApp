<Window x:Class="MemoApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >
    <Grid>
        <Menu FontSize="10" FontWeight="Bold" Background="Black"
              materialDesign:MenuAssist.TopLevelMenuItemHeight="15">
            <MenuItem Header="File">
                <MenuItem Header="New"/>
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Save As"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Cut"/>
                <MenuItem Header="Copy"/>
                <MenuItem Header="Paste"/>
            </MenuItem>
        </Menu>
        <TextBox Margin="0,15,0,10" Background="DarkGray" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</Window>
